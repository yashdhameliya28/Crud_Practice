@model EmployeeModel

<form asp-action="Save" method="post">

    <input type="hidden" asp-for="EmpID" />

    <div class="form-group">
        <label>Employee Name</label>
        <input asp-for="EmpName" class="form-control" />
        <span asp-validation-for="EmpName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Salary</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Department</label>
        <select asp-for="DeptID" class="form-control" asp-items="@(new SelectList(ViewBag.DepartmentList, "DeptID", "DepartmentName"))">
            <option value="0">Select Department</option>
        </select>
        <span asp-validation-for="DeptID" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Save</button>
</form>
